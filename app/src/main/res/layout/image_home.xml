<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="190dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        >

        <ImageView
            android:id="@+id/imgCategoryImg"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="16dp"
            android:background="@drawable/draw_home_image"
            android:clipToOutline="true"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_tranh"
            app:layout_constraintBottom_toBottomOf="@+id/imgCategoryImg"
            app:layout_constraintEnd_toEndOf="@+id/imgCategoryImg"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:tint="@color/darkRed" />

        <TextView
            android:id="@+id/tvPictureAmount"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="School (5 picture)"
            android:textColor="#000000"
            android:textSize="10dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>